<?xml version="1.0" encoding="utf-8" ?>
<log4net xmlns="http://logging.apache.org/log4net/schemas/log4net-1.2">
	<root>
		<level value="ALL" />
		<!-- We now send logs to two places: the file and the console -->
		<appender-ref ref="FileAppender" />
		<appender-ref ref="ConsoleAppender" />
	</root>

	<!-- This is the existing appender for the log file -->
	<appender name="FileAppender" type="log4net.Appender.FileAppender">
		<file value="main.log" />
		<appendToFile value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %level %logger - %message%newline" />
		</layout>
	</appender>

	<!-- 
    This new appender tells log4net to also print messages to the console window.
  -->
	<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
		</layout>
	</appender>
</log4net>